<div class="container my-5">
  <!-- Navbar logo w/ temp -->
  <div class="d-flex justify-content-between mb-3">
    <div>
      <a href="/">
        <h1>ToFi</h1>
      </a>
    </div>
    <div class="d-flex">
      <img src="./images/josh-weather-placeholder.png" alt="temperature" width="100" class="weather-logo">
      <div>
        <h1>62</h1>
        <div>San Francisco, CA</div>
      </div>
    </div>
  </div>

  <h1>{{this.name}}</h1>

  <div class="back mb-4" onClick="back()">&#8592; Back to Homepage</div>

  <div class="d-flex flex-wrap">
    {{#each tracks.items}}
    <div class="px-2">
      <img class="ellipsis" width=200 src={{this.track.album.images.[0].url}}>
      <h6>{{this.track.name}}</h6>
      <audio controls>
        <source src={{this.track.preview_url}} type="audio/mpeg">
        Your browser does not support the audio element.
      </audio>
    </div>
    {{/each}}
  </div>
</div>

<script>
  function back() {
    window.history.back();
  }
</script>